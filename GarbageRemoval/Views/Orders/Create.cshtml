@model GarbageRemoval.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrigadeId" class="control-label"></label>
                <select asp-for="BrigadeId" class ="form-control" asp-items="ViewBag.BrigadeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="HouseId" class="control-label"></label>
                <select asp-for="HouseId" class ="form-control" asp-items="ViewBag.HouseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsServed" /> @Html.DisplayNameFor(model => model.IsServed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CostPerKilogram" class="control-label"></label>
                <input asp-for="CostPerKilogram" class="form-control" />
                <span asp-validation-for="CostPerKilogram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GarbadgeWeight" class="control-label"></label>
                <input asp-for="GarbadgeWeight" class="form-control" />
                <span asp-validation-for="GarbadgeWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
