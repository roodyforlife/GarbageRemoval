@model GarbageRemoval.Models.Order

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <div class="form-group">
                <label asp-for="Brigade" class="control-label"></label>
                <select asp-for="BrigadeId" class="form-control" asp-items="ViewBag.BrigadeId"></select>
                <span asp-validation-for="BrigadeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="House" class="control-label"></label>
                <select asp-for="HouseId" class="form-control" asp-items="ViewBag.HouseId"></select>
                <span asp-validation-for="HouseId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsServed" /> @Html.DisplayNameFor(model => model.IsServed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CostPerKilogram" class="control-label"></label>
                <input asp-for="CostPerKilogram" class="form-control" />
                <span asp-validation-for="CostPerKilogram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GarbadgeWeight" class="control-label"></label>
                <input asp-for="GarbadgeWeight" class="form-control" />
                <span asp-validation-for="GarbadgeWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
